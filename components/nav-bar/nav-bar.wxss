/* components/nav-bar/nav-bar.wxss */
.container {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 32rpx;
  font-weight: bold;
}

.title {
  text-align: center;
  width: 320rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.icons {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.icons .back,.home {
  width: 40rpx;
  height: 40rpx;
}

.home {
  margin-left: 40rpx;
}