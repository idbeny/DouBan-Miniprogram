<!--components/nav-bar/nav-bar.wxml-->
<view>
  <view style="height: {{topHeight}}px;"></view>
  <view class="container">
    <view style="{{ statusBarStyle }}"></view>
    <view class="nav-bar" style="{{ navBarStyle }}">
      {{ title }}
      <view class="icons">
        <image bind:tap="back" wx:if="{{ back == 'true' }}" class="back" src="{{ navBackSrc }}" />
        <image bind:tap="home" wx:if="{{ home == 'true' }}" class="home" src="{{ navHomeSrc }}" />
      </view>
    </view>
  </view>
</view>
