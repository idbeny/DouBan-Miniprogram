/* components/movie-item/movie-item.wxss */
.item {
  display: inline-flex;
  flex-direction: column;
  width: 160rpx;
}

.hover {
  opacity: 0.5;
}

.item .photo {
  width: 100%;
  height: 223rpx;
  background-color: #ccc;
  border-radius: 10rpx;
}

.item .photo:hover {

}

.item .title {
  font-size: 24rpx;
  margin-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.score {
  display: flex;
  align-items: center;
  color: #818181;
  font-size: 20rpx;
  font-weight: 300;
}

.score .stars {
  display: flex;
}

.score .star {
  width: 24rpx;
  height: 24rpx;
}

.score .avg {
  margin-left: 2rpx;
}