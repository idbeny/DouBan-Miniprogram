/* pages/clouddev/cloud-subscribe/cloud-subscribe.wxss */
.container {
  padding: 30rpx 30rpx;
  position: relative;
}

.module {
  background-color: #f6f6f6;
  border-radius: 10rpx;
  padding: 30rpx 30rpx;
  margin-bottom: 60rpx;
}

.module-title {
  text-align: left;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #666666;
}

.picker {
  height: 100rpx;
  line-height: 100rpx;
  color: #42BD55;
  font-size: 40rpx;
}

.send {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
  background-color: #42BD55;
  border-radius: 10rpx;
  text-align: center;
  margin: 30rpx 30rpx;
}