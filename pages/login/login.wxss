/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 30rpx;
}

.logo {
  width: 144rpx;
  height: 144rpx;
  margin: 40rpx 0;
}

.btn-login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6rpx;
}

.wechat {
  background-color: #42BD55;
  color: #fff;
  margin: 40rpx auto; 
}

.douban {
  color: #42BD55;
  border: 2rpx solid #42BD55;
}

.agreement {
  position: absolute;
  bottom: 50rpx;
  font-size: 24rpx;
  display: flex;
  color: #9c9c9c;
}

.agreement .open {
  color: #42BD55;
  margin-left: 10rpx;
}