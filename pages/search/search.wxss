/* pages/search/search.wxss */
.search-wrapper {
  background-color: #42BD55;
  height: 80rpx;
  padding: 0rpx 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-wrapper {
  width: 100%;
  height: 50rpx;
  font-size: 26rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0rpx 10rpx;
  opacity: 0.4;
}

.search {
  flex: 1;
}