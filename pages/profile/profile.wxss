/* pages/profile/profile.wxss */
.login-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 400rpx;
  position: relative;
}

.login-wrapper image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.login-wrapper .login {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: #000;
  border-radius: 40rpx;
  text-align: center;
}

.version {
  width: 100%;
  position: absolute;
  bottom: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}